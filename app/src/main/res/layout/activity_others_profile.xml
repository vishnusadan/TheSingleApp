<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.OthersProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/profileback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/single_image_dummy"
                android:scaleType="fitXY"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:src="@drawable/gradient_rl" />

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/back_icon" />

            <ImageView
                android:id="@+id/premium"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:layout_marginEnd="17dp"
                android:src="@drawable/star_icon" />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_above="@+id/imageViewbck"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="84dp"
                android:background="@drawable/gmail_icon"
                android:elevation="2dp" />

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/single_image_dummy" />

            <ImageView
                android:id="@+id/active"
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_alignTop="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/inactive_round" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilepic"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/comicsansms3"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:text="Name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usercity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comicsansms3"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="City"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="54dp"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="7dp"
                android:layout_toEndOf="@+id/profilepic">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/agecount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comicsansms3"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comicsansms3"
                        android:text="@string/age"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/fav_img"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/fav_white"
                            />
                        <TextView
                            android:id="@+id/favouritecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/comicsansms3"
                            android:text="0"
                            android:layout_marginStart="2dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/comicsansms3"
                        android:text="@string/favourites"
                        android:id="@+id/favtext"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:layout_gravity="center">

                       <ImageView
                           android:id="@+id/likes_img"
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/likes_white"/>

                       <TextView
                           android:id="@+id/likescount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:fontFamily="@font/comicsansms3"
                           android:text="0"
                           android:layout_marginStart="2dp"
                           android:textColor="@color/white"
                           android:textSize="14sp"
                           android:textStyle="bold" />

                   </LinearLayout>

                    <TextView
                        android:id="@+id/liketext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/comicsansms3"
                        android:layout_gravity="center"
                        android:text="@string/likes"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/images"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/op_f_img"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/gallery_photowhite"
                    android:backgroundTint="@color/white"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/images"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/comicsansms3"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/flirt"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/op_s_flirt"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/flirt_smile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/flirt_white_icon"
                    />

                <TextView
                    android:id="@+id/flirt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flirt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/comicsansms3"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/message"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/op_t_message"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/message_white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_message"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/comicsansms3"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/request"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/op_request"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/friend_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/friends_white"
                    />

                <TextView
                    android:id="@+id/request_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel Request"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/comicsansms3"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/block"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/op_f_block"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/blockicon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/block_icon"
                    />

                <TextView
                    android:id="@+id/block_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blocked"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/comicsansms3"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/gray"
                android:text="@string/profiledetails"
                android:textStyle="bold"
                android:fontFamily="@font/comicsansms3"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicsansms3"
                    android:text="@string/lookingfor"/>

                <TextView
                    android:id="@+id/lookingforvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/comicsansms3"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicsansms3"
                    android:text="@string/religion"/>

                <TextView
                    android:id="@+id/religionvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comicsansms3"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicsansms3"
                    android:text="@string/occupation"/>

                <TextView
                    android:id="@+id/occupationvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comicsansms3"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicsansms3"
                    android:text="@string/retired"/>

                <TextView
                    android:id="@+id/retiredvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comicsansms3"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicsansms3"
                    android:text="@string/martialstatus"/>

                <TextView
                    android:id="@+id/martialstatusvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comicsansms3"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicsansms3"
                    android:text="@string/numberofchildren"/>

                <TextView
                    android:id="@+id/numberofchildrenvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comicsansms3"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicsansms3"
                    android:text="@string/livingathome"/>

                <TextView
                    android:id="@+id/livingathomevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/comicsansms3"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/gray"
            android:text="@string/about"
            android:textStyle="bold"
            android:fontFamily="@font/comicsansms3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aboutcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:fontFamily="@font/comicsansms3"
            android:gravity="start"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/gray"
            android:text="@string/hobby"
            android:textStyle="bold"
            android:fontFamily="@font/comicsansms3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hobbycontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/comicsansms3"
            android:gravity="start"/>

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>