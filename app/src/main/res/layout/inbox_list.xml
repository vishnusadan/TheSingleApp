<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/single_image_dummy"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />
    <ImageView
        android:id="@+id/starImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star_gold_icon"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true">

    </ImageView>


    <ImageView
        android:id="@+id/online"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/ivImage"
        android:layout_marginStart="-14dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/ivImage"
        android:elevation="2dp"
        android:src="@drawable/inactive_home" />

    <TextView
        android:id="@+id/tvfirstname"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivImage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:fontFamily="@font/comicsansms3"
        android:gravity="start"
        android:text="@string/source5"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/comicsansms3"
        android:gravity="start"
        android:text="@string/source2"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvfirstname"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/unreadcount"
        android:layout_toEndOf="@+id/ivImage"
        android:fontFamily="@font/comicsansms3"
        android:text="@string/source5"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/unreadcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvfirstname"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:background="@drawable/circular_textview"
        android:fontFamily="@font/comicsansms3"
        android:text="@string/source6"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="0dp"
        android:background="@color/hintgray" />


</RelativeLayout>
